<!DOCTYPE html>
<html>
<head>
  <title>Scheme Zone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "application" %>
</head>
<body>

<div id="top">
	<div class="container" id="navbar">
		<% if @current_user %>
			<a style="padding: 5px;" href="/">Scheme Zone</a>
			<div id="notifications" class="pull-right">
				<i class="icon-envelope icon"></i>
			</div>
			<ul class="pull-right">
				<li class="dropdown user-item">
					<a class="dropdown-toggle">
            <img width="20" height="20" src="https://a2.muscache.com/users/4162263/profile_pic/1353031519/small.jpg" alt="">
            <span class="value_name"><%= @current_user.name %></span> <b class="caret"></b>
          </a>
				</li>
				<ul id="user-drop-down-menu">
					<li> 
				</ul>
			</ul>
		<% end %>
		<div class="pull-right clearfix">
			<% if !@current_user %>
			    <%= form_tag sessions_path, :style =>"display: inline;" do |f| %>  
			        <%= text_field_tag :email, params[:email], :placeholder => "Email", :class=>"field" %> 
			        <%= password_field_tag :password, params[:password], :placeholder => "Password", :class=>"field" %>
			        <%= submit_tag "Log in", :class=>"btn field", :style=>"margin-top: -10px; padding: 5px" %>
			    <% end %>  
			    <a class="btn field" style="margin-top: -10px; padding: 5px" href=<%= new_user_path %>>Signup</a>
			<% 	end %> 
		</div>
	</div>
</div>	

<%= yield %>
	
<footer>
	&copy; Scheme Zone 2013
</footer>
</body>
</html>
