<!DOCTYPE html>
<html>
<head>
  <title>Schemezone</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= csrf_meta_tags %>
  <%= javascript_include_tag "jquery", "jquery_ujs" %>
  <%= javascript_include_tag "application" %>
</head>
<body>

<div class="container" style="margin-top: 10px;">
	<div class="pull-right clearfix">
		<% if !@current_user %>
		    <%= form_tag sessions_path, :style =>"display: inline;" do |f| %>  
		        <%= text_field_tag :email, params[:email], :placeholder => "Email" %> 
		        <%= password_field_tag :password, params[:password], :placeholder => "Password" %>
		        <%= submit_tag "Log in", :class=>"btn btn-primary", :style=>"margin-top: -10px" %>  
		    <% end %>  
		    <a class="btn btn-primary" style="margin-top: -10px;" href=<%= new_user_path %>>Signup</a>
	    <% else %>
			<a  class="btn btn-primary" href="/logout">Logout</a>
		<% 	end %> 
	</div>
</div>

<%= yield %>

</body>
</html>
